{
    "audio": "pipewire",
    "bootloader": "grub-install",
    "custom-commands": [
        "cd /tmp; git clone https://aur.archlinux.org/yay-bin.git",
	    "cd yay-bin",
	    "makepkg -si"
	],
    "filesystem": "btrfs",
    "swap": true,
    "hostname": "arch-tower",
    "kernels": [
        "linux"
    ],
    "keyboard-language": "us",
    "mirror-region": "United States",
    "nic": {
        "NetworkManager": true,
        "nic": "Use NetworkManager (necessary to configure internet graphically in GNOME and KDE)"
    },
    "ntp": true,
    "packages": ["base-devel", "docker", "git", "wget", "zsh", "neovim", "docker-compose", "rsync", "fish"],
    "desktop-environment": "gnome",
    "services": ["docker"],
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "US/Eastern"
}
